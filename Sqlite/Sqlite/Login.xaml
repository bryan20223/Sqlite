<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sqlite.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login"/>

            <Entry x:Name="txtUsuario" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtContraseña" Placeholder="Ingrese su contraseña" IsPassword="True"/>

            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked"/>
            <Button x:Name="btnIniciar" Text="Iniciar" Clicked="btnIniciar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>